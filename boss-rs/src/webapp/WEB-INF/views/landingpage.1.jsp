      var myImage1 = new Image();
      myImage1.src = '../static/honeycomb/images/recording-studio.jpg';
      var myImage2 = new Image();
      myImage2.src = '../static/honeycomb/images/intro-background.jpg';
      var image1Boolean = false;
      var image2Boolean = false;
      var deviceDetection = false;
      var windowSize = ($(window).innerWidth());
      $(myImage1).load(function(){
        image1Boolean = true;
        if((image2Boolean) && windowSize > 767 ){
          resizer.animate({width: "50%"}, 2000)
        }
      });
      $(myImage2).load(function(){
        image2Boolean = true;
        if((image1Boolean) && windowSize > 767){
          resizer.animate({width: "50%"}, 2000)
        }
      });
      var oldXPos = 0,
          isDragging = false,
          startWidth = undefined,
          startWidthStrip = undefined,
          resizer = $('.top-section');
      $(document).mousemove(function(event) {
        if (isDragging)
        {
            var difference = event.pageX - oldXPos;
            if(!(resizer.width() > windowSize)){
              resizer.css('width', (startWidthStrip + difference) + "px" );
            }
            if(resizer.width() > windowSize){
              resizer.css('width', '100%');
              isDragging = false;
            }
            if((startWidthStrip + difference) <= 175){
              resizer.css('width', '175px');
            } 
        }
      });
      $('.top-section-wrap').mousedown(function(event) {
        if($(window).width() > 747){
          isDragging = true;
        }
        oldXPos = event.pageX;
        startWidth = resizer.css('width');
        startWidthStrip = parseFloat(startWidth);
      });
      $(document).mouseup(function() {
        isDragging = false;
      });
      //For touch devices
      if( /Android|webOS|iPhone|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
        deviceDetection = true;
        var mobileWidth = $(window).innerWidth();
        var mobileHeight = $(window).innerHeight();
        if(mobileWidth > mobileHeight){
          $('.top-section').css("background-image", "url(/static/honeycomb/images/mobile-landscape.jpg)");
        }
      }
      function touchHandler(event) {
        var touch = event.changedTouches[0];
        var simulatedEvent = document.createEvent("MouseEvent");
            simulatedEvent.initMouseEvent({
            touchstart: "mousedown",
            touchmove: "mousemove",
            touchend: "mouseup"
        }[event.type], true, true, window, 1,
            touch.screenX, touch.screenY,
            touch.clientX, touch.clientY, false,
            false, false, false, 0, null);
        touch.target.dispatchEvent(simulatedEvent);
        //event.preventDefault();
      }
      function init() {
        document.addEventListener("touchstart", touchHandler, true);
        document.addEventListener("touchmove", touchHandler, true);
        document.addEventListener("touchend", touchHandler, true);
        document.addEventListener("touchcancel", touchHandler, true);
      }
      $(document).load(init());
      $(window).on("resize", function(){
        resizer.css('width', '100%');
        windowSize = $(window).innerWidth();
        if(deviceDetection) {
          var mobileWidth = $(window).innerWidth();
          var mobileHeight = $(window).innerHeight();
          if(mobileWidth > mobileHeight){
            $('.top-section').css("background-image", "url(/static/honeycomb/images/mobile-landscape.jpg)");
          }
        }
        if(deviceDetection) {
          var mobileWidth = $(window).innerWidth();
          var mobileHeight = $(window).innerHeight();
          if(mobileWidth < mobileHeight){
            $('.top-section').css("background-image", "url(/static/honeycomb/images/mobile.jpg)");
          }
        }
      })
